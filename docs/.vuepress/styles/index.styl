.navbar {
  background-color: $gray;
  border-bottom: 0px;

  .sidebar-button {
    .icon {
      path {
        fill: white;
      }
    }
  }

  .site-name {
    color: white !important;
  }
}

.links {
  background-color: transparent !important;
}

.hero {
  display: none;
}

.home {
  height: calc(100vh - 58px);
  .theme-default-content{
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
}

.home-container {
  padding-bottom: 54px;

  @media (max-width:400px) {
    padding-top: 144px;
  }

  img {
    display: block;
    margin: 0 auto;
    margin-bottom: 54px;
  }

  .home-text {
    margin: 0 auto;
    margin-bottom: 36px;
    text-align: center;
    font-size: 24px;
    color: $lightgray;

    @media (max-width:400px) {
      font-size: 16px;
    }
  }

  button {
    display: block;
    margin: 0 auto;
    margin-bottom: 54px;
    color: #fff;
    font-size: 1.2rem;
    background-color: $blue;
    padding: .8rem 1.6rem;
    border-radius: 4px;
    transition: background-color .1s ease;
    box-shadow: 0 2px 4px 0 rgba($black, 0.3);
    border-color: rgba($gray, 0.1);
    cursor: pointer;
  }

  button:hover {
    background-color: $blue-hover;
  }
  
}

.sidebar {
  background-color: $sidebar;

  li {
    margin-top: 0 !important;
  }

  a.sidebar-link.active {
    color: $darkblue;
    border-left-color: $darkblue;
  }

  a.sidebar-link:hover {
    color: $darkblue;
  }

  &> .sidebar-links > li > a.sidebar-link, .sidebar-heading > span {
    font-size: 18px !important;
  }

  .sidebar-group-items > li > .sidebar-link {
    font-size: 16px !important;
  }

  .sidebar-sub-header {
    font-size: 14px !important;
  }
}

@media (min-width: 1200px) {

  .sidebar-sub-headers::before {
    content: 'Table of Contents';
    font-size: 18px;
    font-weight: bold;
    color: $main-gray;
    position: fixed;
    margin-top: -36px;
  }

  .sidebar-sub-headers {
    position: fixed;
    right: 0;
    top: 58px;
    width: 252px;
    height: 100%;
    padding-top: 52px !important;
  }

  .sidebar-sub-header {
    margin-left: 24px;

    .sidebar-link {
      padding-left: 8px !important;
      border-left: 2px solid rgba($main-gray, 0.1) !important;
    }

    .active{
        border-left: 2px solid $darkblue !important;
      }
  }

  .page {
    .theme-default-content, .page-nav {
      padding-right: calc(40px + 252px) !important;
    }
  }
}

