
.theme-default-content:not(.custom) {
  max-width: 1000px;
}

.theme-default-content:not(.custom) li {
  margin-bottom: 16px;
}

.sidebar > .sidebar-links > li > a.sidebar-link {
  font-size: 18px !important;
}

.sidebar-sub-headers a.sidebar-link {
  font-size: 16px !important;
}

h1, h2 {
  margin-bottom: 20px !important;
}

h3, h4 {
  margin-bottom: 16px !important;
}

p {
  margin-top: 0px;
  margin-bottom: 20px;
  line-height: 1.75;
}

img {
  margin-top: 15px;
  margin-bottom: 15px;
}

.language-text {
  margin-bottom: 20px!important
}

.site-name {
  padding-left: 272px;
  background-repeat: no-repeat;
  background-position: center left;
  background-size: 256px;
  background-image: url('https://github.com/taeyoonyy/edgehub_documents/blob/main/icons/loginlogo-interactor.svg')
}
.page-edit {
  text-align: center;
}

.page-edit:before {
  content: "CC-BY-NC-ND Licensed | Copyright Â© 2021-present Taeyoon Yu";
}

.page {
  .toc-title {
    margin-top: 36px;
    padding-left: 36px;
    padding-bottom: 5px;
    color: #2c3e50;
    font-size: 26.4px;
    font-weight: bold;
    border-bottom: 1px solid #eaecef;
    background-repeat: no-repeat;
    background-position: center left;
    background-size: 24px;
    background-image: url('https://github.com/taeyoonyy/edgehub_documents/blob/main/icons/list.svg');
  }

  pre {
    background-color: #3C3A3A !important;
  }

  ul {
    margin-left: 32px;
    padding-left: 0px;

    li {
      margin-bottom: 0px !important;

      a {
        font-weight: 400;
      }
    }
  }

  h1 {
    font-weight: bold;
    font-size: 48px;
  }

  h2 {
    font-weight: bold;

    .header-anchor {
      float: none;
      opacity: 1;
      padding-left: 16px;
      padding-right: 0px;
      color: #2c3e50;
    }
  }

  h3 {
    font-weight: bold;
  }

  code {
    font-weight: bold;
    color: rgba(red, 0.7);
  }

  .custom-block {
    padding-top: 20px;
    border-radius: 4px;
  }

  .custom-block-title,
  .info-title {
    margin-bottom: 8px;
    padding-left: 36px;
    background-repeat: no-repeat;
  }

  .tip {
    .custom-block-title {
      background-size: 24px;
      background-image: url('https://github.com/taeyoonyy/edgehub_documents/blob/main/icons/tip.svg');
    }
  }

  .warning {
    .custom-block-title {
      background-image: url('https://github.com/taeyoonyy/edgehub_documents/blob/main/icons/warning.svg');
    }
  }

  .danger {
    .custom-block-title {
      background-size: 24px;
      background-position: center left;
      background-image: url('https://github.com/taeyoonyy/edgehub_documents/blob/main/icons/danger.svg');
    }
  }

  .info {
    background-color: #f2fafd;
    color: #6b5900;
    border-radius: 4px;
    border-left: 0.5rem solid #2a98b9;
    padding: 0.1rem 1.5rem;
    margin: 1rem 0;
    padding-top: 20px;

    .info-title {
      color: #2c3e50;
      font-weight: bold;
      background-size: 24px;
      padding-bottom: 4px;
      background-image: url('https://github.com/taeyoonyy/edgehub_documents/blob/main/icons/info.svg');
    }

    p {
      margin-bottom: 0;
    }
  }

  .page-nav {
    max-width: 1000px;
  }

  table {
    thead {
      tr {
        background-color: #ebf0f5;
      }
    }
  }
}