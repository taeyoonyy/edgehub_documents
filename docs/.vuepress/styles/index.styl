.navbar {
  background-color: $gray;
  border-bottom: 0px;

  .sidebar-button {
    .icon {
      path {
        fill: white;
      }
    }
  }

  .site-name {
    color: white !important;
  }
}

.links {
  background-color: transparent !important;
}

.hero {
  display: none;
}

.home {
  height: calc(100vh - 58px);
  .theme-default-content{
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
}

.home-container {
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 54px;

  #welcome-bi {
    position: fixed;
    top: 70px;
    left: 130px;
  }

  .welcome-left {
    width: calc(100%/ 2 - 130px);
    padding-left: 130px;
  }

  .welcome-right {
    width: calc(100%/ 2);
  }

  .home-title{
    font-size: 94px;
    font-weight: bold;
    color: #181a1f;
    letter-spacing: -8px;
  }

  .home-text {
    margin-bottom: 148px;
    font-size: 36px;
    font-weight: 300;
    color: #8398ab;
    letter-spacing: -1.62px;
  }

  button {
    display: block;
    color: #fff;
    font-weight: bold;
    font-size: 32px;
    letter-spacing: -1.44px;
    background-color: #2e8afe;
    padding: 16px 60px;
    border-radius: 4px;
    border: none;
    cursor: pointer;
  }

  button:hover {
    background-color: $blue-hover;
  }
  
}

.sidebar {
  background-color: $sidebar;

  li {
    margin-top: 0 !important;
  }

  a.sidebar-link.active {
    color: $darkblue;
    border-left-color: $darkblue;
  }

  a.sidebar-link:hover {
    color: $darkblue;
  }

  &> .sidebar-links > li > a.sidebar-link, .sidebar-heading > span {
    font-size: 18px !important;
  }

  .sidebar-group-items > li > .sidebar-link {
    font-size: 16px !important;
  }

  .sidebar-sub-header {
    font-size: 14px !important;
  }
}

@media (min-width: 1200px) {

  .sidebar-sub-headers::before {
    content: 'Table of Contents';
    font-size: 18px;
    font-weight: bold;
    color: $main-gray;
    position: fixed;
    margin-top: -36px;
  }

  .sidebar-sub-headers {
    position: fixed;
    right: 0;
    top: 58px;
    width: 252px;
    height: 100%;
    padding-top: 52px !important;
  }

  .sidebar-sub-header {
    margin-left: 24px;

    .sidebar-link {
      padding-left: 8px !important;
      border-left: 2px solid rgba($main-gray, 0.1) !important;
    }

    .active{
        border-left: 2px solid $darkblue !important;
      }
  }

  .page {
    .theme-default-content, .page-nav {
      padding-right: calc(40px + 252px) !important;
    }
  }
}

.copyright {
  position: fixed;
  left: 130px;
  bottom: 56px;
}

