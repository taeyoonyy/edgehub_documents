
.theme-default-content:not(.custom) {
  max-width: 1000px;
}

.theme-default-content:not(.custom) li {
  margin-bottom: 16px;
}

.sidebar > .sidebar-links > li > a.sidebar-link {
  font-size: 18px !important;
}

.sidebar-sub-headers a.sidebar-link {
  font-size: 16px !important;
}

.home-link{
  img {
    width: 256px;
    margin-top: 0;
  }
}

.copyright {
  text-align: center;
  padding-top: 50px;
  margin-bottom: -50px;
}

.page {
  h2, h2, h3 {
    margin-top: 0 !important;
    padding-top: 24px !important;
  }

  img {
    margin-top: 16px;
    margin-bottom: 8px;
  }

  .spacer {
    height: 24px;
  }

  .spacer-sm {
    height: 4px;
  }

  .toc-title {
    margin-top: 36px;
    padding-bottom: 5px;
    color: #2c3e50;
    font-size: 26.4px;
    font-weight: bold;
    border-bottom: 1px solid #eaecef;
    img {
      width: 22px;
      margin: 0;
      margin-bottom: -2px;
      padding-right: 16px;
    }
  }

  pre {
    background-color: #3C3A3A !important;
  }

  ul {
    margin-left: 32px;
    padding-left: 0px;

    li {
      margin-bottom: 0px !important;

      a {
        font-weight: 400;
      }
    }
  }

  h1 {
    font-weight: bold;
    font-size: 48px;
  }

  h2 {
    font-weight: bold;

    .header-anchor {
      float: none;
      opacity: 1;
      padding-left: 16px;
      padding-right: 0px;
      color: #2c3e50;
    }
  }

  h3 {
    font-weight: 500;
  }

  h4 {
    font-size: 20px;
  }

  h5 {
    font-size: 16px;
    margin-bottom: 0;
  }

  code {
    font-weight: bold;
    color: rgba(red, 0.7);
  }

  u {
    font-style: normal;
    background-color: rgba(27,31,35,0.05);
    padding: 0.12rem 0.5rem;
    margin: 0;
    border-radius: 3px;
    font-weight: 480;
    text-decoration: none;
  }

  .custom-block {
    padding-top: 20px;
    padding-bottom: 20px;
    border-radius: 4px;
    p, ul {
      margin-bottom: 0;
    }
    table{
      tbody{
        tr{
          background: white;
        }
      }
    }
    .custom-block-title {
      margin: 0 !important;
    }
  }

  .custom-block-title,
  .info-title {
    margin-bottom: 8px;
    img {
      margin: 0px 8px -5px 0;
      width: 22px;
    }
  }

  .info {
    background-color: #f2fafd;
    color: #6b5900;
    border-radius: 4px;
    border-left: 0.5rem solid #2a98b9;
    padding: 0.1rem 1.5rem;
    margin: 1rem 0;
    padding-top: 20px;
    padding-bottom: 20px;

    .info-title {
      color: #2c3e50;
      font-weight: 600;
      background-size: 24px;
      padding-bottom: 20px;
    }

    p {
      margin-bottom: 0;
    }

    ul{
      margin-bottom: 0;
    }
  }

  .page-nav {
    max-width: 1000px;
  }

  table {
    width: 100%;
    thead {
      tr {
        background-color: #ebf0f5;
      }
    }
  }
}