.navbar {
  background-color: $darkgray;
  border-bottom: 0px;

  .sidebar-button {
    .icon {
      path {
        fill: white;
      }
    }
  }

  .site-name {
    color: white !important;
  }

  .links{
    background-color: transparent !important;

  }
}

.sidebar {
  background-color: $sidebar;

  li {
    margin-top: 0 !important;
  }

  a.sidebar-link.active {
    color: $darkblue;
    border-left-color: $darkblue;
  }

  a.sidebar-link:hover {
    color: $darkblue;
  }

  &> .sidebar-links > li > a.sidebar-link, .sidebar-heading > span {
    font-size: 18px !important;
  }

  .sidebar-group-items > li > .sidebar-link {
    font-size: 16px !important;
  }

  .sidebar-sub-header {
    font-size: 14px !important;
  }
}

.copyright {
  text-align: center;
  padding-top: 50px;
  margin-bottom: -50px;
}

.page {
  .theme-default-content:not(.custom) {
    max-width: 1000px;
    a {
      font-weight: 400;
      color: $green;
    }
  }


  img {
    margin-top: 16px;
    margin-bottom: 8px;
  }

  .spacer {
    height: 24px;
  }

  .spacer-sm {
    height: 4px;
  }

  .toc-title {
    margin-top: 36px;
    padding-bottom: 5px;
    color: $main-gray;
    font-size: 26.4px;
    font-weight: bold;
    border-bottom: 1px solid #eaecef;
    img {
      width: 22px;
      margin: 0;
      margin-bottom: -2px;
      padding-right: 16px;
    }
  }

  pre {
    background-color: #191d24 !important;
  }

  ul {
    margin-left: 32px;
    padding-left: 0px;

    li {
      margin-bottom: 0px !important;

      a {
        font-weight: 400;
      }
      ul {
        margin-left: 0;
        li {
          list-style: none;
        }
        li:before{
          content: '';
          display: inline-block;
          width: 5px;
          height: 5px;
          margin: -2px 12px auto auto;
          vertical-align: middle;
          border-right: 2px solid $main-gray;
          border-top: 2px solid $main-gray;
          transform: rotate(45deg)
        }
      }
    }
  }

  h1 {
    font-weight: bold;
    font-size: 48px;
  }

  h2 {
    font-weight: bold;

    .header-anchor {
      float: none;
      opacity: 1;
      padding-left: 16px;
      padding-right: 0px;
      color: $main-gray;
    }
  }

  h3 {
    font-weight: 500;
  }

  h4 {
    font-size: 20px;
  }

  h5 {
    font-size: 16px;
    margin-bottom: 0;
  }

  code {
    color: $red;
  }

  u {
    font-style: normal;
    margin: 0;
    font-weight: 500;
    text-underline-position: under;
    text-decoration-color: lightgray;
  }

  .custom-block {
    padding-top: 20px;
    padding-bottom: 20px;
    border-radius: 4px;
    p, ul {
      margin-bottom: 0;
    }
    table{ 
      thead {
        tr {
          background-color: rgba($darkgray, 0.02);
        }
      }
      tbody{
        tr{
          background: white;
        }
      }
    }
    .custom-block-title {
      margin: 0 !important;
    }
  }

  .custom-block-title,
  .info-title {
    margin-bottom: 8px;
    img {
      margin: 0px 8px -5px 0;
      width: 22px;
    }
  }

  .tip {
    .custom-block-title {
      color: $darkgreen;
    }
  }

  .info {
    background-color: #f2fafd;
    color: #6b5900;
    border-radius: 4px;
    border-left: 0.5rem solid #2a98b9;
    padding: 0.1rem 1.5rem;
    margin: 1rem 0;
    padding-top: 20px;
    padding-bottom: 20px;

    .info-title {
      color: #0d4859;
      font-weight: 600;
      background-size: 24px;
    }

    p {
      margin: 0;
    }

    ul{
      margin-bottom: 0;
    }
  }

  .page-nav {
    max-width: 1000px;
  }

  table {
    width: 100%;
    thead {
      tr {
        background-color: rgba($darkgray, 0.1);
      }
    }
    tr:nth-child(2n) {
        background-color: rgba($darkgray, 0.02);
    }
  }
}